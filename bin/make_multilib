#!/bin/bash

make_multilib() {
	sed -i "s/\(src_\(unpack\|prepare\|compile\|configure\|install\)\) \{0,1\}\((\)/multilib-native_\1_internal\3/" $1
	sed -i "s/\(pkg_\(setup\)\) \{0,1\}\((\)/multilib-native_\1_internal\3/" $1
	sed -i "/^inherit / { /multilib-native/ b; s/$/ multilib-native/ }" $1
}

make_multilib $1
ebuild $1 manifest
